    {
      "parameters": {
        "jsCode": "// Default cookies for categories request\nconst query = $input.first().json.query || {};\nconst cityId = query.city_id || '16344'; // Default: online store\n\nreturn [{\n  json: {\n    city_id: cityId,\n    root_category: 'komplektuyushchie_dlya_remonta'\n  }\n}];"
      },
      "id": "config",
      "name": "Config",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [220, 200]
    },
    {
      "parameters": {
        "method": "GET",
        "url": "=https://green-spark.ru/local/api/catalog/products/?path[]={{ $json.root_category }}&perPage=1&page=1",
        "options": {
          "response": {
            "response": {
              "fullResponse": false,
              "responseFormat": "json"
            }
          },
          "timeout": 30000
        },
        "headerParameters": {
