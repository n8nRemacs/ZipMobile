          ]
        }
      },
      "id": "http",
      "name": "Fetch Categories",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [440, 200]
    },
    {
      "parameters": {
        "jsCode": "const data = $input.first().json;\nconst subsections = data.subsections || [];\n\n// Extract categories\nconst categories = subsections.map(sub => {\n  const url = sub.url || '';\n  const match = url.match(/\\/catalog\\/(.+?)\\/?$/);\n  const slug = match ? match[1].split('/').pop() : '';\n  \n  return {\n    name: sub.name,\n    slug: slug,\n    url: sub.url,\n    full_path: match ? match[1] : ''\n  };\n});\n\nreturn [{\n  json: {\n    success: true,\n    count: categories.length,\n    categories: categories\n  }\n}];"
      },
